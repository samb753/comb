<div class="phrase-container" style="background-color: <%= @phrase.color %>">
  <div class="col-sm-4 col-sm-offset-4">
     <h1 class="phrase-name trim"><%= @phrase.first_word %> <%= @phrase.second_word %></h1>
  </div>
  <div class="fixed-bottom phrase-entry-box">
    <div class="col-sm-4">
      <h2 id="phraseHex", class="trim"><%= @phrase.color %></h2>
    </div>
    <div class="col-sm-4">
      <!-- midde -->
    </div>
    <div class="col-sm-4 phrase-navigation">
      <%= link_to ('<i class="fa fa-trash"></i>').html_safe, phrase_path, method: :delete, data: { confirm: "Are you sure?" }, class: "trim" %>
      <%= link_to ('<i class="fa fa-undo"></i>').html_safe, phrases_path, class: "trim" %>
      <%= link_to ('<i class="fa fa-random"></i>').html_safe, phrase_random_path, class: "trim"  %>
      <%= link_to ('<i class="fa fa-plus"></i>').html_safe, new_phrase_path, class: "trim" %>
    </div>
  </div>
</div>
