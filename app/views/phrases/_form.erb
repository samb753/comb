<div class="phrase-container" id="newPhraseBackground">
  <div class="fixed-bottom phrase-entry-box">
    <%= simple_form_for(@phrase) do |f| %>
    <div class="phrase-data-container trim">
      <div class="col-sm-4 col-md-4 hex-form">
       <div aria-label="select color (spacebar for random)" data-microtip-position="top-right" data-microtip-size="small" role="tooltip" id="colorMicrotipBox">
        <%= f.input :color, as: :minicolors, label:false, placeholder: "ðŸŽ¨", input_html: {data: {
          minicolors: { position: :top }}}, class: "phrase-form-field" %>
        </div>
      </div>
      <div class="col-sm-3 col-md-4 words-form">
        <%= f.text_field :first_word, value: Bazaar.super_adj.downcase, placeholder: ".....", class: "phrase-form-field" %>
        <%= f.text_field :second_word, value: Bazaar.super_item.downcase, placeholder: ".....", class: "phrase-form-field" %>
      </div>
      <div class="col-sm-4 col-md-4 new-phrase-buttons">
        <span aria-label="copy hex (c)" data-microtip-position="top-left" data-microtip-size="fit" role="tooltip">
          <i class="fa fa-clone trim" id="copyHex"></i>
        </span>
        <%= button_tag type: 'submit', class: "trim", id: "formSubmit" do %>
        <span aria-label="save (enter)" data-microtip-position="top-left" data-microtip-size="fit" role="tooltip">
          <i class="fa fa-save" aria-hidden="true"></i>
        </span>
        <% end %>
        <span aria-label="random saved phrase" data-microtip-position="top-left" data-microtip-size="fit" role="tooltip">
          <%= link_to ('<i class="fa fa-random"></i>').html_safe, phrase_random_path, class: "trim" %>
        </span>
        <span aria-label="library" data-microtip-position="top-left" data-microtip-size="fit" role="tooltip">
          <%= link_to ('<i class="fa fa-archive"></i>').html_safe, phrases_path, class: "trim" %>
        </span>
      </div>
    </div>
    <% end %>
  </div>
</div>
