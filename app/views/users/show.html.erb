<div class="container">
  <nav>
    <div class="nav-title">
      <h3 style="margin: 0px">
        <%= link_to 'phrase palette', root_path, id: "navTitleLink" %>
        <span class="index-name">my palette</span>
      </h3>
    </div>
    <div class="nav-buttons">
      <%= link_to ('<i class="fa fa-plus trim"></i>').html_safe, new_phrase_path %>
      <%= link_to ('<i class="fa fa-random trim"></i>').html_safe, phrase_random_path %>
      <%= link_to ('<i class="fa fa-archive trim"></i>').html_safe, phrases_path, class: "trim" %>
      <%= render 'users/user_icon' %>
      <% if user_signed_in? %>
      <%= link_to('<i class="fa fa-sign-out trim"></i>'.html_safe, destroy_user_session_path, method: :delete) %>
      <% end %>
    </div>
  </nav>
    <div class="cards-container">
      <div class="row" id="cardRow">
          <% @phrases.each do |phrase| %>
              <div class="col-md-3 col-sm-6 col-xs-12" style="padding: 0px">
                <div class="card" style="background: <%= phrase.color %>">
                   <%= link_to phrase_path(phrase) do %>
                    <div class="card-body">
                    </div>
                    <div class="card-footer">
                      <div class="card-phrase" id="cardPhraseLink">
                        <%= phrase.first_word %> <%= phrase.second_word %>
                      </div>
                    <% end %>
                    <div class="card-hex">
                      <%= phrase.color %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
        </div>
      </div>
  </div>
</div>
